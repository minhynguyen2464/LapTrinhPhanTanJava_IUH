package ontap;
import java.net.*;
import java.io.*;
import java.util.Arrays;

public class Server {
	public static void main(String[] args) {
		final int SERVER_PORT = 6666;
		ServerSocket serverSocket = null;
		try {
			serverSocket = new ServerSocket(SERVER_PORT);
			System.out.println("Waiting for connection...");
			while(true) {
				Socket clientSocket = serverSocket.accept();
				System.out.println("Connect successfully!");
				//In
				BufferedReader in = new BufferedReader(new InputStreamReader(System.in));
				String stringNum = in.readLine();
				//Process
				int[] number = turnStringToIntArr(stringNum);
				int[] sortedNumber = sortNumber(number);
				String sortedStringNumber = turnIntArrToString(sortedNumber);
				//Out
				PrintWriter out = new PrintWriter(clientSocket.getOutputStream(),true);
				String sendMsg = "Server Accepted: "+sortedStringNumber;
				out.println(sendMsg);
				clientSocket.close();
			}

		}
		catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public static int[] turnStringToIntArr(String stringNum) {
		String[] stringNums = stringNum.split(",");
		int[] number = new int[stringNums.length];
		for(int i=0; i<stringNums.length; i++) {
			number[i] = Integer.parseInt(stringNums[i]);
		}
		return number;
	}
	
	public static int[] sortNumber(int[] arr) {
		Arrays.sort(arr);
		return arr;
	}
	
	public static String turnIntArrToString(int[] arr) {
		StringBuilder sortedStringNumber = new StringBuilder();
		for(int i=0; i<arr.length; i++) {
			sortedStringNumber.append(arr[i]);
			if(i<arr.length-1) {
				sortedStringNumber.append(", ");
			}
		}
		String result = sortedStringNumber.toString();
		return result;
	}
}
